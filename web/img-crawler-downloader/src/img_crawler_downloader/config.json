{
  "job": {
    "name": "multicloud-architecture-center",
    "description": "Gets all architectural drawings from major Cloud Architecture Centers",
    "tags": ["azure", "aws"]
  },
  "provider": {
    "azure": {
      "crawler": {
        "api": {
          "request": {
            "baseUrl": "https://learn.microsoft.com",
            "apiUrl": "/api/contentbrowser/search/architectures/?locale=en-us",
            "query": {
              "size": 30,
              "pagination": {
                "limit": 1,
                "_comment": "28 is the last page with a total of 835 records"
              }
            }
          },
          "response": {
            "absoluteUrls": false,
            "identifiers": {
              "collection": "results",
              "pagination": {
                "nextUrl": "@nextLink"
              },
              "item": {
                "title": "title",
                "summary": "summary",
                "thumbnail": "thumbnail_url",
                "url": "url",
                "categories": "azure_categories",
                "products": "products"
              }
            }
          }
        },
        "web": {
          "selector": {
            "item": "/html/body/div[2]/div/section/div/div/main/div[2]/section[2]/div/div/div[2]/ul/li[1]"
          }
        }
      }
    },
    "aws": {
      "crawler": {
        "api": {
          "request": {
            "baseUrl": "https://aws.amazon.com",
            "apiUrl": "/api/dirs/items/search?item.directoryId=alias%23architecture-center&size=15&item.locale=en_US",
            "query": {
              "pagination": {
                "limit": 1,
                "_comment": "28 is the last page with a total of 835 records"
              }
            }
          },
          "response": {
            "aboluteUrls": true,
            "identifiers": {
              "collection": "items",
              "nested": {
                "item": "item",
                "additional": "additionalFields"
              },
              "pagination": {
                "urlPrefix": "page"
              },
              "item": {
                "title": "headline",
                "summary": "description",
                "url": "headlineUrl"
              }
            }
          }
        },
        "web": {
          "selector": {
            "item": "/html/body/div[2]/div/section/div/div/main/div[2]/section[2]/div/div/div[2]/ul/li[1]"
          }
        }
      }
    }
  },
  "downloader": {
    "location": "downloaded"
  }
}
